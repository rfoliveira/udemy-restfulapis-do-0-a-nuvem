<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Repository\Implementation\PersonRepositoryNew.cs" />
    <Compile Remove="Services\Implementation\PersonMockService.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Evolve" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Formatters.Xml" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="3.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Design" Version="2.2.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="2.2.3" />
    <PackageReference Include="MySql.Data" Version="8.0.16" />
    <PackageReference Include="Pomelo.EntityFrameworkCore.MySql" Version="2.2.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="5.0.0-rc2" />
    <PackageReference Include="Tapioca.HATEOAS" Version="1.0.4" />
  </ItemGroup>

  <Target Name="ChangeAliasesOfStrongNameAssemblies" BeforeTargets="FindReferenceAssembliesForReferences;ResolveReferences">
    <ItemGroup>
      <ReferencePath Condition="'%(FileName)' == 'MySqlConnector'">
        <Aliases>MySqlConnectorAlias</Aliases>
      </ReferencePath>
    </ItemGroup>
  </Target>

  <ItemGroup>
    <Content Include="db\migrations\**\*.sql">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="HyperMedia\**" />
    <Content Remove="HyperMedia\**" />
    <EmbeddedResource Remove="HyperMedia\**" />
    <None Remove="HyperMedia\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="db\migrations\V1_0_2__Alter_table.sql" />
    <None Remove="db\migrations\V1_0_3__Inserting_Data.sql" />
    <None Remove="db\migrations\V1_0_4__Create_table_books.sql" />
    <None Remove="db\migrations\V1_0_6__recreating_books.sql" />
    <None Remove="db\migrations\V1_0_7__Create_table_users.sql" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Data\Converter\Converters\" />
  </ItemGroup>

</Project>
